<p id="notice"><%= notice %></p>

<h1>Technologies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @technologies.each do |technology| %>
    <h2><%= technology.name%></h2>
        <% technology.categories.each do |category| %>
          <h3><%= category.name%></h3>
          <% category.resources.each do |resource| %>
            <h4><%= resource.title %></h4>
          <% end %>
        <% end %>
      <tr>
        <td><%= link_to 'Show', technology %></td>
        <td><%= link_to 'Edit', edit_technology_path(technology) %></td>
        <td><%= link_to 'Destroy', technology, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

